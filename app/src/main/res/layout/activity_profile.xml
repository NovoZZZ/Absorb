<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityProfile">

    <TextView
        android:id="@+id/tv_usernamep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="156dp"
        android:text="username:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nicknamep"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="36dp"
        android:text="nickname:"
        app:layout_constraintStart_toStartOf="@+id/tv_usernamep"
        app:layout_constraintTop_toBottomOf="@+id/tv_usernamep" />

    <TextView
        android:id="@+id/tv_passwordp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="password:"
        app:layout_constraintStart_toStartOf="@+id/tv_usernamep"
        app:layout_constraintTop_toBottomOf="@+id/tv_nicknamep" />

    <TextView
        android:id="@+id/tv_totaltimep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Total Time:"
        app:layout_constraintStart_toStartOf="@+id/tv_usernamep"
        app:layout_constraintTop_toBottomOf="@+id/tv_passwordp" />

    <TextView
        android:id="@+id/tv_usernameshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="un"
        app:layout_constraintStart_toEndOf="@+id/tv_usernamep"
        app:layout_constraintTop_toTopOf="@+id/tv_usernamep" />

    <EditText
        android:id="@+id/et_nicknameshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/tv_nicknamep"
        app:layout_constraintTop_toBottomOf="@+id/tv_usernamep" />

    <EditText
        android:id="@+id/edit_passwordshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/tv_passwordp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nicknamep" />

    <TextView
        android:id="@+id/tv_totaltimeshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_totaltimep"
        app:layout_constraintTop_toTopOf="@+id/tv_totaltimep" />
</androidx.constraintlayout.widget.ConstraintLayout>